{
  "functions": {
    "source": "dist/apps/back/functions",
    "predeploy": ["yarn build back-functions --prod", "node tools/scripts/build-firebase-functions-package-json.js"]
  },
  "hosting": [
    {
      "target": "front-client",
      "public": "dist/apps/front/client",
      "predeploy": ["yarn build front-client --prod"],
      "ignore": ["firebase.json", "**/.*", "**/*.map", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/api/**",
          "function": "api"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "**/*.@(js|css|jpg|jpeg|gif|png|svg|ico|eot|ttf|woff|woff2|txt)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=31536000"
            },
            {
              "key": "Content-Encoding",
              "value": "gzip"
            }
          ]
        },
        {
          "source": "/@(ngsw-worker.js|ngsw.json)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-cache"
            }
          ]
        }
      ]
    },
    {
      "target": "front-admin",
      "public": "dist/apps/front/admin",
      "predeploy": ["yarn build front-admin --prod"],
      "ignore": ["firebase.json", "**/.*", "**/*.map", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/api/**",
          "function": "api"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "**/*.@(js|css|jpg|jpeg|gif|png|svg|ico|eot|ttf|woff|woff2|txt)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=31536000"
            },
            {
              "key": "Content-Encoding",
              "value": "gzip"
            }
          ]
        },
        {
          "source": "/@(ngsw-worker.js|ngsw.json)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-cache"
            }
          ]
        }
      ]
    }
  ]
}
